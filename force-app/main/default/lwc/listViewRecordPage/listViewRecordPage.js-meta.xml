<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>54.0</apiVersion>
    <description>An enhanced version of the Salesforce List View and Related List for record pages.</description>
    <isExposed>true</isExposed>
    <masterLabel>List View Record Page</masterLabel>
    <targets>
        <target>lightning__RecordPage</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__RecordPage">
            <property name="title" label="Title" type="String" required="true"/>
            <property name="soql" label="SOQL" type="String" required="true"/>
            <property name="subTitle" label="Sub Title" type="String"/>
            <property name="icon" label="Icon" type="String"/>
            <property name="pageSize" label="Page Size" type="Integer" min="1"/>
            <property name="editFields" label="Edit Fields" type="String"/>
            <property name="showButtons" label="Show Buttons" type="Boolean"/>
            <property name="showRowNumber" label="Show Row Number" type="Boolean"/>
            <property name="bypassAccess" label="Bypass Access" type="Boolean"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
